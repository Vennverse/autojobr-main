{
  "manifest_version": 3,
  "name": "AutoJobr - Smart Job Application Assistant",
  "version": "3.0.0",
  "description": "High-performance job application automation with AI-powered analysis and instant form filling",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies",
    "background",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://*.replit.dev/*",
    "https://*.replit.app/*", 
    "https://*.replit.co/*",
    "https://7f6e19b3-7c52-40cd-a936-d850c0a12fb1-00-19k7ygzf7q5kk.riker.replit.dev/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "http://40.160.50.128:5000/*"
  ],
  "background": {
    "service_worker": "background-simple.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://linkedin.com/*",
        "*://*.linkedin.com/*",
        "*://indeed.com/*",
        "*://*.indeed.com/*",
        "*://glassdoor.com/*",
        "*://*.glassdoor.com/*",
        "*://workday.com/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://lever.co/*",
        "*://*.lever.co/*",
        "*://greenhouse.io/*",
        "*://*.greenhouse.io/*",
        "*://monster.com/*",
        "*://*.monster.com/*",
        "*://ziprecruiter.com/*",
        "*://*.ziprecruiter.com/*",
        "*://wellfound.com/*",
        "*://*.wellfound.com/*",
        "*://angel.co/*",
        "*://*.angel.co/*",
        "*://bamboohr.com/*",
        "*://*.bamboohr.com/*",
        "*://smartrecruiters.com/*",
        "*://*.smartrecruiters.com/*",
        "*://jobvite.com/*",
        "*://*.jobvite.com/*",
        "*://icims.com/*",
        "*://*.icims.com/*",
        "*://taleo.net/*",
        "*://*.taleo.net/*",
        "*://successfactors.com/*",
        "*://*.successfactors.com/*",
        "*://ashbyhq.com/*",
        "*://*.ashbyhq.com/*"
      ],
      "js": ["unified-content-script.js"],
      "css": ["unified-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoJobr Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "unified-styles.css",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}