{
  "manifest_version": 3,
  "name": "AutoJobr",
  "version": "2.1.0",
  "description": "AI-powered job application assistant - Smart auto-fill, job matching, and application tracking across 100+ job boards",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "webNavigation",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "*://*.glassdoor.com/*",
    "*://*.ziprecruiter.com/*",
    "*://*.monster.com/*",
    "*://*.dice.com/*",
    "*://*.greenhouse.io/*",
    "*://*.lever.co/*",
    "*://*.workday.com/*",
    "*://*.myworkdayjobs.com/*",
    "*://*.naukri.com/*",
    "*://*.shine.com/*",
    "*://*.timesjobs.com/*",
    "*://*.freshersjobs.com/*",
    "*://*.instahyre.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "*://*.ziprecruiter.com/*",
        "*://*.monster.com/*",
        "*://*.dice.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.naukri.com/*",
        "*://*.shine.com/*",
        "*://*.timesjobs.com/*",
        "*://*.freshersjobs.com/*",
        "*://*.instahyre.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["popup-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoJobr - AI Job Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup-styles.css", "icons/*"],
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "*://*.ziprecruiter.com/*",
        "*://*.monster.com/*",
        "*://*.dice.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.naukri.com/*",
        "*://*.shine.com/*",
        "*://*.timesjobs.com/*",
        "*://*.freshersjobs.com/*",
        "*://*.instahyre.com/*"
      ]
    }
  ],
  "commands": {
    "autofill": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Auto-fill current form"
    },
    "analyze": {
      "suggested_key": {
        "default": "Ctrl+Shift+J"
      },
      "description": "Analyze job match"
    },
    "save-job": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save current job"
    }
  }
}