{
  "manifest_version": 3,
  "name": "AutoJobr - Smart Job Application Assistant",
  "version": "2.0.0",
  "description": "Advanced job application automation with AI-powered form filling and cover letter generation",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies",
    "background"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://ab8b7c11-4933-4f20-96ce-3083dfb2112d-00-3bpxputy7khv2.riker.replit.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoJobr Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css", "overlay.js"],
      "matches": ["<all_urls>"]
    }
  ]
}