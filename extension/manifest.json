{
  "manifest_version": 3,
  "name": "AutoJobr",
  "version": "3.1.0",
  "description": "Smart Job Application Assistant",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies",
    "background",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://*.replit.dev/*",
    "https://*.replit.app/*", 
    "https://*.replit.co/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "http://40.160.50.128:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://linkedin.com/*",
        "*://*.linkedin.com/*",
        "*://indeed.com/*",
        "*://*.indeed.com/*",
        "*://glassdoor.com/*",
        "*://*.glassdoor.com/*",
        "*://workday.com/*",
        "*://*.workday.com/*",
        "*://lever.co/*",
        "*://*.lever.co/*",
        "*://greenhouse.io/*",
        "*://*.greenhouse.io/*",
        "*://monster.com/*",
        "*://*.monster.com/*",
        "*://ziprecruiter.com/*",
        "*://*.ziprecruiter.com/*",
        "*://wellfound.com/*",
        "*://*.wellfound.com/*",
        "*://angel.co/*",
        "*://*.angel.co/*",
        "*://bamboohr.com/*",
        "*://*.bamboohr.com/*",
        "*://smartrecruiters.com/*",
        "*://*.smartrecruiters.com/*",
        "*://jobvite.com/*",
        "*://*.jobvite.com/*",
        "*://icims.com/*",
        "*://*.icims.com/*",
        "*://taleo.net/*",
        "*://*.taleo.net/*",
        "*://successfactors.com/*",
        "*://*.successfactors.com/*",
        "*://ashbyhq.com/*",
        "*://*.ashbyhq.com/*"
      ],
      "js": ["smart-detector.js", "form-filler.js"],
      "css": ["autojobr-styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.myworkdayjobs.com/*",
        "*://*.wd1.myworkdayjobs.com/*",
        "*://*.wd2.myworkdayjobs.com/*",
        "*://*.wd3.myworkdayjobs.com/*",
        "*://*.wd4.myworkdayjobs.com/*",
        "*://*.wd5.myworkdayjobs.com/*",
        "*://*.wd6.myworkdayjobs.com/*",
        "*://*.wd7.myworkdayjobs.com/*",
        "*://*.wd8.myworkdayjobs.com/*",
        "*://*.wd9.myworkdayjobs.com/*",
        "*://*.wd10.myworkdayjobs.com/*"
      ],
      "js": ["workday-content-script.js", "smart-detector.js", "form-filler.js"],
      "css": ["autojobr-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoJobr Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "autojobr-overlay.html",
        "autojobr-styles.css",
        "autojobr-floating-panel.js",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}