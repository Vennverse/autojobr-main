
{
  "version": "1.0.0",
  "lastUpdated": "2025-01-11",
  "updateUrl": "https://autojobr.com/api/extension/config",
  "ats": {
    "workday": {
      "urls": ["*://*.myworkdayjobs.com/*", "*://workforcenow.adp.com/*"],
      "selectors": {
        "firstName": {
          "xpath": [
            ".//input[@aria-label='First Name']",
            ".//input[@data-automation-id='legalNameSection_firstName']"
          ],
          "css": ["input[name*='firstName']", "input[aria-label*='First']"]
        },
        "lastName": {
          "xpath": [".//input[@aria-label='Last Name']"],
          "css": ["input[name*='lastName']"]
        },
        "email": {
          "xpath": [".//input[@type='email']"],
          "css": ["input[type='email']", "input[name*='email']"]
        }
      }
    },
    "greenhouse": {
      "urls": ["*://boards.greenhouse.io/*"],
      "dynamicFields": true,
      "formDetection": {
        "container": "#application_form",
        "submitButton": "#submit_app"
      }
    },
    "lever": {
      "urls": ["*://jobs.lever.co/*"],
      "customScript": "lever-handler.js"
    },
    "ashby": {
      "urls": ["*://*.ashbyhq.com/*", "*://jobs.ashbyhq.com/*"],
      "selectors": {
        "firstName": {
          "css": ["input[name='firstName']", "input[placeholder*='First name']"]
        },
        "lastName": {
          "css": ["input[name='lastName']", "input[placeholder*='Last name']"]
        }
      }
    }
  }
}
