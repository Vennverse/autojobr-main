# AutoJobr Environment Configuration

# Database Configuration (Required)
DATABASE_URL="postgresql://username:password@localhost:5432/autojobr"

# Server Configuration
NODE_ENV="production"
PORT="5000"
SESSION_SECRET="your_random_session_secret_here"

# API Keys (Required for core functionality)
GROQ_API_KEY="your_groq_api_key_here"
RESEND_API_KEY="your_resend_api_key_here"

# Payment Configuration (Optional)
PAYPAL_CLIENT_ID="your_paypal_client_id_here"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret_here"
STRIPE_SECRET_KEY="your_stripe_secret_key_here"

# SMTP Configuration (Optional - alternative to Resend)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="./uploads"

# Chrome Extension Configuration
EXTENSION_ID="your_chrome_extension_id"

# Monitoring and Logging
LOG_LEVEL="info"
ENABLE_LOGGING="true"

# Rate Limiting
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX="100"

# Cache Configuration
REDIS_URL=""
CACHE_TTL="3600"

# Promotional Email Configuration
PROMOTIONAL_EMAILS_ENABLED="false"
PROMO_EMAIL_INTERVAL_HOURS="72"
PROMO_EMAIL_BATCH_SIZE="50"
PROMO_EMAIL_MAX_PER_DAY="500"